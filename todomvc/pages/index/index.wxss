page {
    /* 如果添加了padding，整个页面被撑大了 */
  padding:  20rpx;
  box-sizing: border-box;
}
.header {
  display: flex;
  border: 1px solid #ccc;
  height: 80rpx;
  align-items: center;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 10rpx;  
}

.header image {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
}

.list {
  margin: 20rpx 0;
  border: 1px solid #ccc;
   /* 父盒子不需要下边框 */
  border-bottom: none;
}
.list .item{
 border-bottom: 1px solid #ccc;
 display: flex;
 align-items: center;
 padding: 0 20rpx;
 height: 80rpx;
}

.header input {
  font-size: 30rpx;
  margin-left: 20rpx;
}

.list .item text {
  flex: auto;
  font-size: 30rpx;
  line-height: 0rpx;
  margin-left: 10rpx;
}

.list .item text.completed {
  color: #999;
  text-decoration: line-through;
}
.footer {
  font-size: 30rpx;
  color: #999;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.footer .btn {
  font-size: 30rpx;
  margin-left: 0;
  color: #999;
}

.footer .clearbtn {
  font-size: 30rpx;
  margin-right: 0;
  color: #999;
}

.tip {
  color: #999;
  text-align: center;
}


.tip .title {
  font-size: 60rpx;
  margin-top: 200rpx;
}

.tip .content {
  font-size: 40rpx;
  margin-top: 40rpx;
}