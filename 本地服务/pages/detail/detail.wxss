page{
 background-color: #F0F0F0;
}

swiper {
  height: 580rpx;
}

.switem image{
  min-width: 100%;
  height: 100%;
}

.shopmess {
  display: flex;
  flex-direction:column;
  padding: 20rpx 30rpx;
  background-color: #fff;
  color: #567;
  font-size: 32rpx;
}

.shopmess .name {
  font-size: 40rpx;
  color: #234;
}
.shopmess .score {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: red;
  padding: 0 10rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
}

.comments{
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  color: #345;
  font-size: 24rpx;
}

.comments .item {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.comments .item .name {
  margin-top: 20rpx;
  font-size: 40rpx;
}

.comments .item .date {
  align-self: flex-end;
  margin: -40rpx 0 20rpx;
  color: #567;
}

.comments .item .rating {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  color: #ee523d;
}

.comments .item image {
  width: 110rpx;
  height: 110rpx;
  margin: 10rpx;
}
